<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"> {% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body class="bg-gray-100">
		<div class="flex h-screen">

			<div
				class="flex-1 flex flex-col">
				<!-- Header -->
				<header class="bg-white shadow p-4">
					<h1 class="text-lg font-bold">
						{% block header %}Bem Vindo
						{% endblock %}
					</h1>
				</header>

				<!-- Content -->
				<main class="p-6 flex-1 text-center">
					<a class=" hover:bg-slate-400 font-mono border-2 border-solid border-gray-500 rounded-lg" href="{{path('app_usuario_telaLogin')}}">Voltar</a>
					<div class="">

						<h2 class="font-bold text-lg">CRIAR NOVA CONTA</h2>
						{% block form %}
							<form action="{{path('app_auth_login')}}" method="post">
								<input class="hover:bg-gray-200 border-2 border-solid border-gray-400" type="text" placeholder="Email de Usuário" name="_username" required>
								<br>
								<br>
								<input class="hover:bg-gray-200 border-2 border-solid border-gray-400" type="text" name="_password" placeholder="Username" required>
								<br>
								<br>
								<input class="hover:bg-gray-200 border-2 border-solid border-gray-400" type="text" placeholder="Nome Completo" required>
								<br>
								<br>
								<input class="hover:bg-gray-200 border-2 border-solid border-gray-400" type="password" placeholder="Senha de Usuário" required>
								<br>
								<br>
								<input class="bg-gray-300 hover:bg-gray-500 border-2 border-solid border-gray-600 rounded-lg" type="submit" value="Enviar">
							</form>
						{% endblock %}

					</div>
				</main>
			</div>
		</div>
	</body>
</html>
