<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"> {% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body class="bg-gray-100">
		<div class="flex h-screen">

			<aside class="w-64 hover:w-30 bg-gray-800 text-white p-5">
				<h2 class="text-xl font-bold mb-5">
					Sidebar
				</h2>

				<ul>
					<li class="mb-2 transform transition hover: translate-x-1">
						<a href="{{path('app_usuario_quantidade')}}" class="block px-4 py-2 hover:bg-gray-700">
							Home
						</a>
					</li>
					<li class="mb-2 transform transition hover: translate-x-1">
						<a href="#" class="block px-4 py-2 hover:bg-gray-700">
							Configurações
						</a>
					</li>
					<li class="mb-2 transform transition hover: translate-x-1">
						<a href="{{path('app_usuario')}}" class="block px-4 py-2 hover:bg-gray-700">
							Usuários
						</a>
					</li>
					<li class="mb-2 transform transition hover: translate-x-1">
						<a href="{{path('app_cliente')}}" class="block px-4 py-2 hover:bg-gray-700">
							Clientes
						</a>
					</li>
				</ul>
			</aside>

        <div class="flex-1 flex flex-col">
                <!-- Header -->
                <header class="bg-white shadow p-4">
                    <h1 class="text-lg font-bold">{% block header %}Dashboard{% endblock %}</h1>
					<a href="{{path('app_auth_logout')}}"><button class="bg-slate-400  border-gray-500 rounded-lg float-right ">SAIR</button></a>
                </header>

                <!-- Content -->
                <main class="p-6 flex-1">
                    {% block content %}
				
                    {% endblock %}
                </main>
            </div>
		</div>
	</body>
</html>
